{
  "name": "@vercel/edge",
  "version": "0.3.1",
  "license": "MIT",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "homepage": "https://vercel.com/docs/concepts/functions/edge-functions/vercel-edge-package",
  "files": [
    "dist"
  ],
  "repository": {
